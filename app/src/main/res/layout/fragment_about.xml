<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:id="@+id/about_constraint_layout">
	<TextView
			android:id="@+id/about_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="23sp"
			android:text="@string/about_title"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_marginTop="32dp"/>
	<TextView
			android:id="@+id/about_author"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/about_author"
			android:autoLink="web"
			app:layout_constraintTop_toBottomOf="@+id/about_title"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			/>
	<TextView
			android:id="@+id/about_message"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/about_message"
			android:autoLink="web"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			app:layout_constraintTop_toBottomOf="@+id/about_author"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="16dp"
	/>
	<ImageView
			android:layout_width="180dp"
			android:layout_height="180dp"
			android:src="@drawable/pika_ima"
			app:layout_constraintTop_toBottomOf="@+id/about_message"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			android:layout_marginTop="16dp"/>



</android.support.constraint.ConstraintLayout>